<h4>ジャンル追加・一覧画面</h4>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <%= f.text_field :title %>
  <%= f.radio_button :is_active, "有効" %>
  <%= f.label :is_active, "有効" %>
  <%= f.radio_button :is_active, "無効" %>
  <%= f.label :is_active, "無効" %>
  <%= f.submit "追加" %>
<% end %>

<table>
 <thead>
  <tr>
    <th>ジャンル</th>
    <th>状態</th>
    <th></th>
  </tr>
 </thead>
 <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.title %></td>
      <td><%= genre.is_active %></td>
      <td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
    </tr>
  <% end %>
 </tbody>
</table>