<h1>配送先登録/一覧</h1>

<%= form_for @address, url: addresses_path, method: :post do |f| %>
    <div class="field">
        <%= f.label :郵便番号 %>
        <%= f.text_field :post_code %>
    </div>
    <div class="field">
        <%= f.label :住所 %>
        <%= f.text_area :address %>
    </div>
    <div class="field">
        <%= f.label :宛名 %>
        <%= f.text_field :name %>
    </div>
    <%= f.submit "登録する" %>
<% end %>

<table>
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% current_end_user.addresses.each do |address| %>
            <tr>
                <td><%= address.post_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                    <%= link_to "編集する", edit_address_path(address.id) %>
                    <%= link_to "削除する", address_path(address.id), method: :delete %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>