<h4><%= @genre.title %></h4>
<h5><%= @genre.items.count %>件</h5>

<div>
  <h5>ジャンル検索<h5>
  <% @genres.each do |genre| %>
    <%= link_to genre.title, items_genre_path(genre)  %>
  <% end %>
</div>

<% @genre.items.each do |item| %>
  <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image, :fill, 1200, 1200, format: 'jpeg', size:'200x200', style: "border-radius: 2px;"%><br>
  <% end %>
  <%= item.name %>
  <%= item.price%>円<br>
<% end %>