<h5><%= @word %>(全<%= @items.count %>件)</h5>

<div>
  <h5>ジャンル検索<h5>
  <ul>
    <% @genres.each do |genre| %>
      <li><%= link_to genre.title, items_path(genre_id: genre.id)  %></li>
    <% end %>
  </ul>
</div>

<div class="flex">
  <% @items.each do |item| %>
    <div>
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 1200, 1200, format: 'jpeg', size:'150x150', style: "border-radius: 2px;"%><br>
      <% end %>
      <p class="item-info"><%= item.name %><%= item.price%>円</p>
    </div>
  <% end %>
</div>

