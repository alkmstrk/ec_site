<h4>商品一覧</h4>
<h5><%= @items.count %>件</h5>

<div>
  <h5>ジャンル検索<h5>
  <% @genres.each do |genre| %>
    <%= genre.title  %>
  <% end %>
</div>

<% @items.each do |item| %>
  <%= attachment_image_tag item, :image, :fill, 1200, 1200, format: 'jpeg', size:'200x200', style: "border-radius: 2px;"%><br>
  <%= item.name %>
  <%= item.price%>円<br>
<% end %>

